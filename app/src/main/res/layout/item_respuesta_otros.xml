<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="4dp"
    android:layout_margin="4dp"
    android:background="@color/colorRespuestaOtros">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:id="@+id/iv_imagenRespuesta"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/baseline_person_2_24" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_textoRespuesta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Texto de la respuesta"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_fechaRespuesta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha de la respuesta"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_estrella"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/baseline_star_24"
            android:visibility="invisible" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
